[Unit]
Description=Minecraft Bedrock Server Update

[Service]
EnvironmentFile=/docker/minecraft-bedrock-server-setup/.env
User=${MY_USERNAME}
Group=${MY_USERNAME}
Type=oneshot
WorkingDirectory=/docker/minecraft-bedrock-server-setup/bin
ExecStart=/docker/minecraft-bedrock-server-setup/bin/update.sh

[Install]
WantedBy=timers.target
